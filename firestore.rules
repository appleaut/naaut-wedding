rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Config: Public can read, only Admin can write
    match /config/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // RSVP: Public can create (submit form), Only Admin can read list, update, or delete
    match /rsvp/{document=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Guestbook: Public can read and create (post wish), Only Admin can delete
    match /guestbook/{document=**} {
      allow read, create: if true;
      allow update, delete: if request.auth != null;
    }
  }
}
